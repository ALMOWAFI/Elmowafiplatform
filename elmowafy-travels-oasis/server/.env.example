# =======================
# Application Settings
# =======================
NODE_ENV=development
PORT=5000
DOMAIN=yourdomain.com
CLIENT_URL=https://yourdomain.com
API_BASE_URL=/api

# =======================
# Database Configuration
# =======================
# MongoDB Connection (for local development)
MONGODB_URI=mongodb://localhost:27017/elmowafy-travels

# MongoDB Docker Container (for production)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_this_strong_password
MONGO_USERNAME=elmowafy_user
MONGO_PASSWORD=another_strong_password
MONGO_DATABASE=elmowafy
MONGO_PORT=27017

# MongoDB Express (Web UI)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=change_this_too

# =======================
# Security
# =======================
# JWT Configuration
JWT_SECRET=generate_a_strong_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60 * 60 * 1000  # 1 hour
RATE_LIMIT_MAX=100  # requests per window per IP

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com

# =======================
# File Uploads
# =======================
MAX_FILE_UPLOAD=10  # in MB
FILE_UPLOAD_PATH=./public/uploads

# =======================
# Email Configuration
# =======================
# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="Elmowafy Travels"

# =======================
# Third-Party APIs
# =======================
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# =======================
# Monitoring & Logging
# =======================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# =======================
# Feature Flags
# =======================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true

# =======================
# SSL/TLS (for production)
# =======================
# SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem
# SSL_CA_PATH=/etc/letsencrypt/live/yourdomain.com/chain.pem
