# =======================
# AI Configuration
# =======================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# =======================
# Application Settings
# =======================
NODE_ENV=development
PORT=5000
DOMAIN=yourdomain.com
CLIENT_URL=https://yourdomain.com
API_BASE_URL=/api

# =======================
# Database Configuration
# =======================
# PostgreSQL Connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=elmowafy
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=elmowafy

# Connection URL (alternative to individual variables)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# =======================
# Security
# =======================
# JWT Configuration
JWT_SECRET=generate_a_strong_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60 * 60 * 1000  # 1 hour
RATE_LIMIT_MAX=100  # requests per window per IP

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com

# =======================
# File Uploads
# =======================
MAX_FILE_UPLOAD=10  # in MB
FILE_UPLOAD_PATH=./public/uploads

# =======================
# Email Configuration
# =======================
# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME="Elmowafy Travels"

# =======================
# Third-Party APIs
# =======================
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# =======================
# Monitoring & Logging
# =======================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# =======================
# Feature Flags
# =======================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true

# =======================
# SSL/TLS (for production)
# =======================
# SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem
# SSL_CA_PATH=/etc/letsencrypt/live/yourdomain.com/chain.pem
