# Environment Configuration for Elmowafy Travels Oasis
# Copy this file to .env.local for development or .env.production for production

# Application Environment
NODE_ENV=development
VITE_APP_ENV=development

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# Database Configuration
DATABASE_URL=postgresql://elmowafy:secure_password@localhost:5432/elmowafy
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=./uploads

# AI Services
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
ENABLE_METRICS=true

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Third Party Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
CLOUDINARY_URL=your-cloudinary-url

# Feature Flags
ENABLE_VOICE_RECOGNITION=true
ENABLE_CAMERA_INTEGRATION=true
ENABLE_LOCATION_SERVICES=true
ENABLE_PUSH_NOTIFICATIONS=false

# Development Only
VITE_ENABLE_MOCK_DATA=true
VITE_LOG_LEVEL=debug
