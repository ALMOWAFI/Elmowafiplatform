{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "VITE_API_URL": "https://elmowafiplatform-production.up.railway.app",
    "VITE_APP_VERSION": "1.0.0",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://elmowafiplatform-production.up.railway.app",
      "VITE_APP_VERSION": "1.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://elmowafiplatform-production.up.railway.app/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 