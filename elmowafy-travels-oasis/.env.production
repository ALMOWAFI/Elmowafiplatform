# ========================
# Production Environment
# ========================

# Database Configuration
# ---------------------
POSTGRES_PASSWORD=generate_secure_password_here
POSTGRES_USER=postgres
POSTGRES_DB=elmowafiplatform
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# JWT Configuration
# -----------------
JWT_SECRET_KEY=generate_secure_jwt_secret_here
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API Configuration
# ----------------
NODE_ENV=production
PORT=3000

# Frontend Configuration
# ---------------------
VITE_API_URL=https://api.your-domain.com
VITE_APP_VERSION=1.0.0
VITE_AI_SERVICE_URL=${VITE_API_URL}/ai

# Redis Configuration
# ------------------
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=generate_secure_redis_password_here

# File Uploads
# ------------
FILE_UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760  # 10MB

# Security
# --------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900  # 15 minutes

# Session Management
# -----------------
SESSION_SECRET=generate_secure_session_secret_here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# CORS Configuration
# -----------------
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Logging
# -------
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false

# Monitoring
# ----------
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Email Configuration (if applicable)
# ----------------------------------
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@your-domain.com

# Third-party API Keys (if applicable)
# -----------------------------------
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Feature Flags
# ------------
ENABLE_NEW_FEATURES=false
MAINTENANCE_MODE=false

# ========================
# IMPORTANT SECURITY NOTES
# ========================
# 1. Never commit this file to version control
# 2. Generate strong, unique passwords for all secrets
# 3. Use environment-specific values for different environments
# 4. Rotate secrets regularly
# 5. Limit access to this file to authorized personnel only
