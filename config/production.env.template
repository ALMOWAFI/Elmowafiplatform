# Production Environment Configuration for Elmowafiplatform
# Copy this file to .env and update with your production values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a strong secret key for JWT tokens (use a tool like openssl rand -hex 32)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-change-this-in-production

# CORS Settings - Add your frontend domain
CORS_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com

# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL for production
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://username:password@hostname:5432/elmowafiplatform

# SQLite fallback for development (not recommended for production)
# DATABASE_URL=sqlite:///./data/elmowafiplatform.db

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_URL=redis://username:password@hostname:6379/0

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
FILE_UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4

# Cloud storage (AWS S3, Google Cloud, etc.)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Azure AI Services
AZURE_AI_ENDPOINT=https://your-azure-ai-endpoint.cognitiveservices.azure.com/
AZURE_AI_KEY=your-azure-ai-key

# OpenAI API (optional)
# OPENAI_API_KEY=your-openai-api-key

# Google Cloud AI (optional)
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=Elmowafiplatform

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log

# Sentry for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# These variables are used by the React frontend
VITE_API_URL=https://your-api-domain.railway.app
VITE_APP_VERSION=1.0.0
VITE_APP_TITLE=Elmowafiplatform
VITE_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id

# =============================================================================
# SOCIAL AUTH (optional)
# =============================================================================
# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# PAYMENT PROCESSING (optional)
# =============================================================================
# Stripe
# STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# ANALYTICS (optional)
# =============================================================================
# Google Analytics
# GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID

# =============================================================================
# CDN AND ASSET DELIVERY
# =============================================================================
# Cloudflare or other CDN settings
# CDN_URL=https://your-cdn-domain.com
# ASSET_URL=https://assets.your-domain.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================
TZ=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ar

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
CACHE_TTL=3600
SESSION_TIMEOUT=86400
CONNECTION_POOL_SIZE=20
WORKER_PROCESSES=1 