groups:
- name: node_alerts
  rules:
  - alert: HighNodeCPU
    expr: 100 - (avg by(instance) (rate(node_cpu_seconds_total{mode="idle"}[5m])) * 100 > 80
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High CPU usage on {{ $labels.instance }}"
      description: "CPU usage is {{ $value }}%"

  - alert: HighNodeMemory
    expr: (node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100 > 85
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High memory usage on {{ $labels.instance }}"
      description: "Memory usage is {{ $value }}%"

  - alert: HighDiskUsage
    expr: 100 - (node_filesystem_avail_bytes{fstype=~"ext4|xfs"} * 100 / node_filesystem_size_bytes{fstype=~"ext4|xfs"}) > 85
    for: 15m
    labels:
      severity: warning
    annotations:
      summary: "High disk usage on {{ $labels.instance }} ({{ $labels.mountpoint }})"
      description: "Disk usage is {{ $value }}%"

- name: app_alerts
  rules:
  - alert: HighRequestLatency
    expr: histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) > 1
    for: 5m
    labels:
      severity: warning
    annotations:
      summary: "High request latency on {{ $labels.instance }}"
      description: "95th percentile latency is {{ $value }}s"

  - alert: HighErrorRate
    expr: rate(http_requests_total{status=~"5.."}[5m]) / rate(http_requests_total[5m]) > 0.01
    for: 5m
    labels:
      severity: critical
    annotations:
      summary: "High error rate on {{ $labels.instance }}"
      description: "Error rate is {{ $value }}"

  - alert: ServiceDown
    expr: up == 0
    for: 1m
    labels:
      severity: critical
    annotations:
      summary: "Service {{ $labels.job }} is down"
      description: "{{ $labels.instance }} has been down for more than 1 minute"

- name: database_alerts
  rules:
  - alert: HighDatabaseConnections
    expr: pg_stat_activity_count > 50
    for: 5m
    labels:
      severity: warning
    annotations:
      summary: "High number of database connections on {{ $labels.instance }}"
      description: "{{ $value }} active connections"

  - alert: HighDatabaseLatency
    expr: rate(pg_stat_database_xact_commit[5m]) < 1
    for: 10m
    labels:
      severity: warning
    annotations:
      summary: "High database latency on {{ $labels.instance }}"
      description: "Transaction commit rate is low: {{ $value }}/s"

- name: business_metrics
  rules:
  - alert: HighSignupRate
    expr: rate(signup_events_total[5m]) > 10
    for: 5m
    labels:
      severity: info
    annotations:
      summary: "High signup rate detected"
      description: "{{ $value }} signups per second"

  - alert: LowConversionRate
    expr: rate(payment_events_total[1h]) / rate(signup_events_total[1h]) < 0.1
    for: 1h
    labels:
      severity: warning
    annotations:
      summary: "Low conversion rate detected"
      description: "Conversion rate is {{ $value }}%"
